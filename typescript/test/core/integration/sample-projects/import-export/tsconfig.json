{
  "compilerOptions": {
    "paths": {
      "@internal": ["src/internal"],
      "@internal/*": ["src/internal/*"]
    },
    "target": "esnext",
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
