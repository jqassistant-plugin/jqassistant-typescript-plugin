{
  "extends": "./base.json",
  "compilerOptions": {
    "paths": {
      "@internal": ["src/internal"],
      "@internal/*": ["src/internal/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
